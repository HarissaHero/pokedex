{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.{spec,test}.ts"],
  "compilerOptions": {
    "outDir": "./dist",
    "esModuleInterop": true,
    "target": "ES2022",
    "module": "CommonJS",
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["src/controllers/*"],
      "@helpers/*": ["src/helpers/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@models/*": ["src/models/*"],
      "@routes/*": ["src/routes/*"],
      "@services/*": ["src/services/*"],
    }
  }
}
